<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="@dimen/main_bottom_tab_height"
              android:gravity="center"
              android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tab_bottom_quying_selector"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_bottom_tab_icon_margin"
        android:text="@string/tab_quying"
        android:textColor="@drawable/selector_tab_text_color"
        android:textSize="@dimen/main_bottom_tab_text_size"/>
</LinearLayout>